{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:json/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "import/imports-first": "warn",
    "import/newline-after-import": "warn",
    "newline-after-var": "warn",
    "no-console": "warn",
    "react/prop-types": "off",
    "react-hooks/rules-of-hooks": "error"
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import",
    "jsx-a11y",
    "react-hooks",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "jest": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
