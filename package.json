{
  "name": "yet-another-react-project-boilerplate",
  "version": "0.3.2",
  "description": "React app boilerplate with Webpack",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "lint:css": "stylelint \"src/**/*.{js,jsx,css,scss}\"",
    "lint:js": "eslint \"src/**/*.{js,jsx}\"",
    "lint": "npm run lint:js && npm run lint:css",
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --hot --port 3000 --config webpack.config.dev.js",
    "test": "jest --watch",
    "test:run": "jest",
    "test:all": "jest --watchAll",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "serve": "live-server --port=5000 build"
  },
  "author": "Jason Barr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonsbarr/yet-another-react-project-boilerplate.git"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "eslint-plugin-jest": "^23.1.1",
    "react": "^16.12.0",
    "react-conflux": "0.0.2-beta.6",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-syntax-bigint": "^7.7.4",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@emotion/babel-preset-css-prop": "^10.0.23",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "autoprefixer": "^9.7.2",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "editorconfig": "^0.15.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jest-emotion": "^10.0.17",
    "lint-staged": "^9.4.3",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react-test-renderer": "^16.12.0",
    "responsive-loader": "^1.2.0",
    "sass-loader": "^8.0.0",
    "sharp": "^0.23.3",
    "style-loader": "^1.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "svg-url-loader": "^3.0.3",
    "terser-webpack-plugin": "^2.2.1",
    "url-loader": "^2.3.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "lint-staged": {
    "*.+(json)": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ],
    "*.+(js|jsx)": [
      "jest --findRelatedTests",
      "pretty-quick --staged",
      "eslint --fix",
      "stylelint --fix",
      "git add"
    ],
    "*.+(css|scss)": [
      "pretty-quick --staged",
      "stylelint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
